let num1 = 10;
let num2 = 15;
document.getElementById("num1-el").textContent = num1;
document.getElementById("num2-el").textContent = num2;
let sumEl = document.getElementById("sum-el");
let subEl = document.getElementById("sum1-el");
let mulEl = document.getElementById("sum2-el");
let divEl = document.getElementById("sum3-el");


function add() {
    let result = num1 + num2;
    sumEl.textContent = "Sum is: " + result;
}


function subtract() {
    if (num1 > num2) {
        let result = num1 - num2;
        subEl.textContent = "Subtraction is: " + result;
    } else {
        let result = num2 - num1;
        subEl.textContent = "Subtraction is: " + result;
    }

}

function multiply() {
    let result = num1 * num2;
    mulEl.textContent = "Multiply is: " + result;
}

function divide() {
    let result = num1 / num2;
    divEl.textContent = "Divide is: " + result;
}
